{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Project",
            "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/Parse/Reader.cpp",
                "${workspaceFolder}/Graph/Graphs.cpp",
                "${workspaceFolder}/Classes/User.cpp",
                "${workspaceFolder}/Classes/Posts.cpp",
                "-o",
                "${workspaceFolder}/app.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
